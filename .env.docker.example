# Docker Compose Environment Configuration
# Copy this file to .env and fill in your credentials

# ============================================================================
# Telegram Bot Configuration
# ============================================================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
# Comma-separated list of allowed user IDs (empty = allow all users)
ALLOWED_USER_IDS=

# ============================================================================
# LLM API Keys (Optional - depends on AGENT_TYPE)
# ============================================================================
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
QWEN_API_KEY=
OPENAI_BASE_URL=
GITHUB_TOKEN=

# ============================================================================
# Agent Configuration
# ============================================================================
# Agent type: stub (for testing), qwen_code, qwen_code_cli
AGENT_TYPE=stub
AGENT_MODEL=qwen-max
AGENT_TIMEOUT=300

# Enable MCP features
AGENT_ENABLE_MCP=false
AGENT_ENABLE_MCP_MEMORY=true

# ============================================================================
# Memory Storage Configuration
# ============================================================================
# Storage type: json (simple), vector (semantic search), mem-agent (AI-powered)
MEM_AGENT_STORAGE_TYPE=json

# Model for mem-agent (only used if MEM_AGENT_STORAGE_TYPE=mem-agent)
MEM_AGENT_MODEL=driaforall/mem-agent

# Backend: vllm (for Docker), mlx (for macOS), auto
MEM_AGENT_BACKEND=vllm

# Agent settings
MEM_AGENT_MAX_TOOL_TURNS=20
MEM_AGENT_TIMEOUT=20

# Memory limits (in bytes)
MEM_AGENT_FILE_SIZE_LIMIT=1048576       # 1MB
MEM_AGENT_DIR_SIZE_LIMIT=10485760       # 10MB
MEM_AGENT_MEMORY_SIZE_LIMIT=104857600   # 100MB

# ============================================================================
# vLLM Server Configuration (for mem-agent backend)
# ============================================================================
VLLM_PORT=8001
GPU_MEMORY_UTILIZATION=0.8
MAX_MODEL_LEN=4096
TENSOR_PARALLEL_SIZE=1

# ============================================================================
# MCP Server Configuration
# ============================================================================
MCP_PORT=8765

# ============================================================================
# Knowledge Base Configuration
# ============================================================================
KB_GIT_ENABLED=true
KB_GIT_AUTO_PUSH=true

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
