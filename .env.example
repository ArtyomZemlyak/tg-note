# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
# ALLOWED_USER_IDS=  # IMPORTANT: Only set this in docker mode if you want to restrict users. Empty or unset = allow all. If set to empty string in docker, it may cause errors.

# API Keys for AI Agents (optional)
OPENAI_API_KEY=your_openai_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
QWEN_API_KEY=your_qwen_api_key_here
ANTHROPIC_API_KEY=
GITHUB_TOKEN=

# Docker-specific settings (only needed when using docker-compose)
# HuggingFace cache directory (for vLLM service)
HF_HOME=/root/.cache/huggingface

# vLLM/SGLang/MLX connection settings (for MCP hub in docker)
MEM_AGENT_HOST=vllm-server
MEM_AGENT_PORT=8001

# MCP Hub connection (for bot in docker)
MCP_HUB_URL=http://mcp-hub:8765/sse

# Memory agent storage settings (for MCP hub in docker-compose.simple.yml)
MEM_AGENT_STORAGE_TYPE=json
MEM_AGENT_MAX_TOOL_TURNS=20
MEM_AGENT_TIMEOUT=20

# vLLM settings (optional)
VLLM_PORT=8001
GPU_MEMORY_UTILIZATION=0.8
MAX_MODEL_LEN=4096
TENSOR_PARALLEL_SIZE=1
MEM_AGENT_MODEL=driaforall/mem-agent

# MCP Port
MCP_PORT=8765
